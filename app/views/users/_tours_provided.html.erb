<% @tours.each do |tour| %>
  <div class="col-md-4 d-flex justify-content-center align-items-center">
    <div class="">
      <div class="card-trip-guide-show m-3" style="border-radius: 15px">
        <div class="">
          <% if tour.photo %>
            <%= cl_image_tag tour.photo.key, width: 175, height: 100, crop: :fill %>
          <% else %>
            <%= image_tag("https://images.unsplash.com/photo-1502602898657-3e91760cbb34?q=80&w=2073&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D", width: 175, height: 90, style: "object-fit: cover")  %>
          <% end %>
        </div>
        <div class="tourist-bought-bookings-info-user-show p-3">
          <div class="">
            <div class="tourist-bought-bookings-infos-name">
              <p><%= link_to tour.name, tour_path(tour) %></p>
            </div>
          </div>
          <div class="mt-1 mb-1">
            <p>SUP</p>
          </div>
        </div>
      </div>
    </div>
  </div>


<% end %>
