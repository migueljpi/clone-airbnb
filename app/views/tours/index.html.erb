<div class="container">
  <h2 style="color: #1B435D;">FIND YOUR NEXT TOUR</h2>
  <div class="col-12 col-lg-2">
    <div class="search-filter">
      <div class="search-filter-items">
        <div class="search-tours">
          <%= form_with(url: root_path, method: :get, local: true) do %>
            <%= label_tag :search, "Search by location" %>
            <%= text_field_tag :search, params[:search], placeholder: "Search by location" %>
            <%= submit_tag "Search" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

