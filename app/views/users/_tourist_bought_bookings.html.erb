<% if current_user.id == @user.id %>
  <% if @user.bookings.any? %>
    <% @user.bookings.each do |booking| %>
      <% if booking.date >= Date.today %>
        <div class="col-6">
          <div class="card-trip m-3">
            <%= cl_image_tag(booking.tour.photo.key) %>
            <div class="card-trip-infos">
              <div class="card-trip-description">
                <div>
                  <p><%= link_to booking.tour.name, tour_path(booking.tour), class:"card-link" %></p>
                  <p><%= booking.tour.description %></p>
                </div>
                <h2 class="card-trip-pricing"><%= booking.tour.price %>â‚¬</h2>
              </div>
            </div>
            <%# ADD WHAT'S IN LEFTOVERS HERE %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <% else %>
    <h2>You have no bookings yet!</h2>
    <h3>Get ready to explore the world. <%= link_to "Book a tour", root_path, style: "text-decoration: none"%></h3>
  <% end %>
<% else %>
  <p>You are not authorized to view this user's bookings</p>
  <%# Eventually add in here the reviews that the client has made in the past %>
<% end %>
